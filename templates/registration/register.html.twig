{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block head %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <link rel="icon" type="image/png" href="{{ asset('/car.png') }}">
{% endblock %}

{% block body %}
    <div class="container register">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <h1 class="text-center">Register</h1>
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.first_name, 'First Name') }}
                        {{ form_widget(form.first_name, {'attr': {'class': 'form-control', 'placeholder': 'First Name', 'required': 'required'}}) }}
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.last_name, 'Last Name') }}
                        {{ form_widget(form.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Last Name', 'required': 'required'}}) }}
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.phone, 'Phone') }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone', 'required': 'required'}}) }}
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'required'}}) }}
                        <div class="invalid-feedback">Please provide a valid email.</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.password, 'Password') }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'required': 'required'}}) }}
                        <div class="invalid-feedback">Please provide a valid password.</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.roles, 'Role') }}
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                        <div class="invalid-feedback">Please select a role.</div>
                    </div>
                </div>
                {{ form_end(form) }}

               <button class="btn btn-primary btn-block" type="submit">Submit</button>



            </div>
        </div>
    </div>
{% endblock %}
